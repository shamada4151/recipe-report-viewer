{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"]
    }
  },
  "include": [
    "electron.vite.config.ts",
    "src/env.d.ts",
    "src/main/**/*.ts",
    "src/preload/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
