{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "alwaysStrict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    }
  },
  "include": [
    "src/env.d.ts",
    "src/types/**/*.ts",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
